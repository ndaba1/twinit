{
  "name": "twinit",
  "version": "0.0.1",
  "description": "A CLI for setting up tailwindcss on your framework of choice",
  "type": "module",
  "bin": {
    "twinit": "dist/main.js"
  },
  "scripts": {
    "build": "tsc",
    "fmt": "prettier --write ./**/*.{js,ts}",
    "lint": "eslint .",
    "check:fmt": "prettier --check ./**/*.{js,ts}",
    "check:types": "tsc --pretty --noEmit",
    "prepare": "npx husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ndaba1/twinit.git"
  },
  "keywords": [
    "tailwindcss",
    "tailwind",
    "twinit",
    "tw"
  ],
  "files": [
    "./dist",
    "LICENSE",
    "README.md"
  ],
  "author": "Victor Ndaba <vndabam@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ndaba1/twinit/issues"
  },
  "homepage": "https://github.com/ndaba1/twinit#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^8.0.0",
    "@types/node": "^18.7.15",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "prettier": "^2.7.1",
    "typescript": "^4.8.2"
  },
  "dependencies": {
    "chalk": "^5.0.1",
    "commander": "^9.4.0",
    "execa": "^6.1.0",
    "fs-extra": "^10.1.0",
    "glob": "^8.0.3",
    "inquirer": "^9.1.1",
    "listr": "^0.14.3",
    "listr2": "^5.0.5"
  }
}
